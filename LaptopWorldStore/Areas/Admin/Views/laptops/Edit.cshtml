@model LaptopWorldStore.Models.laptop

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class = "page-title">Edit</h4>

<div class="form-edit">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
         
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.monitor)

                @Html.HiddenFor(model => model.cpu)

                @Html.HiddenFor(model => model.gpu)

                @Html.HiddenFor(model => model.ssd)

                @Html.HiddenFor(model => model.ram)

                @Html.HiddenFor(model => model.os)

                @Html.HiddenFor(model => model.weight)

                @Html.HiddenFor(model => model.battery)

                <div class="form-group">
                    @Html.LabelFor(model => model.product_id, "product_id", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                            @Html.DropDownList("product_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.product_id, "", new { @class = "text-danger" })
                        </div>
            </div>

                <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    @Html.ActionLink("Quay lại", "Index", "", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }

</div>
