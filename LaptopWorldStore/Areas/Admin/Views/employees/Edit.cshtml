@model LaptopWorldStore.Models.employee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Nhân viên</h4>

<div class="form-edit">
