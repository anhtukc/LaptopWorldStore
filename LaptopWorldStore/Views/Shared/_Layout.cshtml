<script>
    const slider = document.getElementById('productslider');
    const componentslider = document.getElementById('componentslider');
    const gearslider = document.getElementById('gearslider');

    let isDown = false;
    let startX;
    let scrollLeft;
    function scrollclick(e) {
        isDown = true;
        this.classList.add('productactive');
        startX = e.pageX - this.offsetLeft;
        scrollLeft = this.scrollLeft;
    }

    function scrollmove(e) {
        if (!isDown) return;
        e.preventDefault();
        const x = e.pageX - this.offsetLeft;
        const walk = (x - startX) * 1.5;
        this.scrollLeft = scrollLeft - walk;

    }

    function stopscroll(e) {
        isDown = false;
        this.classList.remove('productactive');
    }
    slider.addEventListener('mousedown', scrollclick);
    slider.addEventListener('mouseleave', stopscroll);
    slider.addEventListener('mouseup', stopscroll);
    slider.addEventListener('mousemove', scrollmove);

    componentslider.addEventListener('mousedown', scrollclick);
    componentslider.addEventListener('mouseleave', stopscroll);
    componentslider.addEventListener('mouseup', stopscroll);
    componentslider.addEventListener('mousemove', scrollmove);

    gearslider.addEventListener('mousedown', scrollclick);
    gearslider.addEventListener('mouseleave', stopscroll);
    gearslider.addEventListener('mouseup', stopscroll);
    gearslider.addEventListener('mousemove', scrollmove);
</script>
